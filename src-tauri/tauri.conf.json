{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Telegram File Server",
  "version": "0.1.0",
  "identifier": "com.telegram.fileserver",
  "build": {
    "beforeDevCommand": "npm --prefix ../TelegramFileServer//src/Frontend run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm --prefix ../TelegramFileServer/src/Frontend run build",
    "frontendDist": "../TelegramFileServer/src/Frontend/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Telegram File Server",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  },
  "plugins": {
    "http": {
      "scope": ["fetch"]
    }
  }
}
