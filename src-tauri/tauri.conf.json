{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Telegram File Server",
  "version": "0.1.0",
  "identifier": "com.telegram.fileserver",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "cd ..\\src\\Frontend && npm run build",
    "frontendDist": "../src/Frontend/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Telegram File Server",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "../src/Frontend/dist/**/*"
    ]
  },
  "plugins": {
    "http": {
      "scope": [
        "http://localhost:8000/**/*",
        "http://127.0.0.1:8000/**/*"
      ]
    }
  }
}